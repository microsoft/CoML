{
  "name": "coml",
  "displayName": "coml",
  "description": "Machine Learning Copilot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coml.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "comlContainer",
          "title": "Machine Learning Copilot",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "comlContainer": [
        {
          "type": "webview",
          "id": "coml.comlView",
          "name": "CoML Chat"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "coml",
        "contents": "Start asking machine learning questions!\n[Set OpenAI API key](command:coml.setOpenAIKey)"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd app && npm install",
    "start:webview": "cd app && npm run start",
    "build:webview": "cd app && npm run build",
    "test:webview": "cd app && npm run test",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
